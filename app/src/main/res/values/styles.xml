<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="queryHint">@string/search_product</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textColorHint">@color/teal_700</item>
        <item name="android:background">@drawable/rounded_corner_view</item>
    </style>

    <style name="AppFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="borderWidth">0dp</item>
        <item name="tint">@color/white</item>
    </style>

</resources>